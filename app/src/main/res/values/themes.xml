<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Barcelona" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primary</item> <!--Action Bar and view (button, etc)-->
        <item name="colorPrimaryVariant">@color/status_bar</item>
        <item name="colorOnPrimary">@color/text_icon</item> <!--Text color in view-->
        <item name="android:textColorPrimary">@color/white</item> <!--Text color in action bar-->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="colorSurface">@color/black</item>

    </style>

    <style name="TextviewSpecial">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment"></item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/jakarta_sans_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Textview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment"></item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/jakarta_sans_regular</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Textview.MarginStart">
        <item name="android:layout_marginStart">130dp</item>
    </style>

    <style name="Textview.MarginStart.BoldHeading">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlayerNameDetail">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/jakarta_sans_bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlayerPositionDetail">
        <item name="android:textColor">@color/text_icon</item>
        <item name="fontFamily">@font/jakarta_sans_regular</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="Theme.Barcelona" parent="Base.Theme.Barcelona" />
</resources>